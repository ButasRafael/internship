{
  "name": "time-is-money-backend",
  "version": "0.0.1",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "reset-db": "node --no-warnings --no-deprecation --loader ts-node/esm scripts/reset-db.ts",
    "hashPasswords": "node --no-warnings --no-deprecation --loader ts-node/esm scripts/hashPasswords.ts",
    "migrate": "node --no-warnings --no-deprecation --loader ts-node/esm scripts/migrate.ts",
    "seed:rates": "node --no-warnings --no-deprecation --loader ts-node/esm scripts/seedExchangeRates.ts",
    "build": "tsc -p tsconfig.json && tsc -p tsconfig.scripts.json",
    "dev": "npm run migrate && npm run seed:rates && nodemon --ext ts,json --watch src --exec \"node --no-warnings --no-deprecation --loader ts-node/esm\" src/server.ts",
    "start": "npm run migrate && npm run seed:rates && node --no-warnings --no-deprecation dist/server.js"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.5",
    "express": "^4.19.0",
    "express-openapi-validator": "^5.5.7",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "mysql2": "^3.10.0",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.5",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@tsconfig/strictest": "^2.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.1.0",
    "@types/nodemailer": "^6.4.17",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
